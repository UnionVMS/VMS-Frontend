{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            ["app", "core", "map", "ui", "asset", "settings", "mobile-terminal", "contact", "notes"],
            "kebab-case"
        ],
        "whitespace": [
          true,
          "check-decl",
          "check-operator",
          "check-module",
          "check-separator",
          "check-rest-spread",
          "check-type",
          "check-typecast",
          "check-preblock",
          "check-postbrace"
        ]
    }
}
